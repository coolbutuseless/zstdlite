PKG_CPPFLAGS = -Izstd
PKG_LIBS = ./libzstd.a

LIBZSTD = zstd/zstd.o

all: clean $(SHLIB)

$(SHLIB): $(PKG_LIBS)
	
libzstd.a: $(LIBZSTD)
	$(AR) rcs libzstd.a $(LIBZSTD)
  
$(LIBZSTD): zstd/zstd.c
	$(CC) $(ALL_CPPFLAGS)  -fPIC  $(CFLAGS) -c zstd/zstd.c -o zstd/zstd.o
  
clean:
	rm -f  $(SHLIB) $(OBJECTS) $(LIBZSTD) ./libzstd.a
